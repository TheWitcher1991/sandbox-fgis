{
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": true,
    "semi": false,
    "jsxSingleQuote": true,
    "singleQuote": true,
    "arrowParens": "avoid",
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^~app/(.*)$",
      "^~apps/(.*)$",
      "^~widgets/(.*)$",
      "^~features/(.*)$",
      "^~providers/(.*)$",
      "^~models/(.*)$",
      "^~packages/(.*)$",
      "^@fgis/(.*)$",
      "^~shared/(.*)$",
      "^~atoms/(.*)$",
      "^~links/(.*)$",
      "^~public/(.*)$",
      "^./(.*)",
      "(.css)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderCaseInsensitive": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  }